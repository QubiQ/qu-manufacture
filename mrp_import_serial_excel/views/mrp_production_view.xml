<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- MRP Import serial numbers wizard form -->
    <record id="mrp_import_file_form" model="ir.ui.view">
        <field name="name">mrp.import.file.form</field>
        <field name="model">mrp.import.serial.number</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="MRP Import serial numbers">
                <group>
                    <field name="name" colspan="4"/>
                </group>
                <group>
                    <field name="data" filename="name" colspan="4"/>
                </group>
               <footer>
                    <button name="format_excel_data" string="Import" type="object" class="oe_highlight"/>
                    <button special="cancel" string="Cancel"/>
               </footer>
           </form>
        </field>
    </record>

    <!-- MRP Import serial numbers wizard action -->
    <record id="mrp_import_file_action" model="ir.actions.act_window">
        <field name="name">MRP Import serial numbers</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">mrp.import.serial.number</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="mrp_import_file_form"/>
        <field name="target">new</field>
    </record>

    <!-- Button for serial numbers importing -->
    <record id="inherit_mrp_production_form" model="ir.ui.view">
        <field name="name">inherit.mrp.production.form</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="%(mrp_import_file_action)d" type="action" class="oe_stat_button" icon="fa-file-excel-o">
                    <div class="o_form_field o_stat_info">
                        <span class="o_stat_text">Import serials</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>

</odoo>
